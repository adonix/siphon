jQuery ($) ->
    $('.btn-primary').click (e) ->
        ext_allowed = ['mp4', 'mov', 'm4a']
        file_ext = $('#video_name').val().split('.').pop().toLowerCase()
        if($.inArray(file_ext, ext_allowed) != -1)
            $('#rules_explanation').hide()
            $('.progress.progress-striped.active').show()
            $(this).addClass('disabled') #disable button
